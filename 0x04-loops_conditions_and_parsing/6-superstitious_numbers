#!/usr/bin/env bash
# This script displays numbers and prints messages for specific iterations

# Initialize a counter
count=1

# Loop using while until count reaches 20
while [ $count -le 20 ]; do
    case $count in
        4)
            echo $count
            echo "bad luck from China"
            ;;
        9)
            echo $count
            echo "bad luck from Japan"
            ;;
        17)
            echo $count
            echo "bad luck from Italy"
            ;;
        *)
            echo $count
            ;;
    esac
    ((count++))  # Increment the counter
done
