#!/usr/bin/env bash
# This script displays "Best School" 10 times and says "Hi" on the 9th iteration

# Initialize a counter
count=0

# Loop using while until count reaches 10
while [ $count -lt 10 ]; do
	if [ $count -eq 8 ]; then
		echo "Best School"
		echo "Hi"
	else
		echo "Best School"
	fi
	((count++))
done
